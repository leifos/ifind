<userConfiguration id="usor">

	<queryGenerator class="PredeterminedQueryGenerator">
		<attribute name="stopword_file" type="string" value="data/stopwords.txt" is_argument="true" />
		<attribute name="query_file" type="string" value="sims/testbed/queries.txt" is_argument="true" />
		<attribute name="user" type="string" value="fake" is_argument="true" />
	</queryGenerator>

	<textClassifiers>
		<snippetClassifier class="InformedTrecTextClassifier">
			<attribute name="stopword_file" type="string" value="data/stopwords.txt" is_argument="true" />
            <attribute name="qrel_file" type="string" value="sims/testbed/qrels_snippet.txt" is_argument="true" />
		</snippetClassifier>

		<documentClassifier class="InformedTrecTextClassifier">
			<attribute name="stopword_file" type="string" value="data/stopwords.txt" is_argument="true" />
            <attribute name="qrel_file" type="string" value="sims/testbed/qrels_mark.txt" is_argument="true" />
		</documentClassifier>
	</textClassifiers>

	<decisionMaker class="FixedDepthDecisionMaker">
        <attribute name="depth" type="integer" value="10" is_argument="true" />
	</decisionMaker>

	<logger class="FixedCostLogger">
		<attribute name="time_limit" type="integer" value="600" is_argument="true" />
		<attribute name="query_cost" type="integer" value="10" is_argument="true" />
		<attribute name="document_cost" type="integer" value="20" is_argument="true" />
		<attribute name="snippet_cost" type="integer" value="3" is_argument="true" />
		<attribute name="serp_results_cost" type="integer" value="5" is_argument="true" />
		<attribute name="mark_document_cost" type="integer" value="3" is_argument="true" />
	</logger>

	<searchContext class="SearchContextRevisedRelevance">
	</searchContext>

</userConfiguration>