<userConfiguration id="ift_prerolled_user">

	<queryGenerator class="SmarterQueryGenerator">
		<attribute name="stopword_file" type="string" value="data/stopwords.txt" is_argument="true" />
	</queryGenerator>

	<textClassifiers>
		<snippetClassifier class="InformedTrecTextClassifier">
			<attribute name="stopword_file" type="string" value="data/stopwords.txt" is_argument="true" /><attribute name="qrel_file" type="string" value="data/prerolled/aq-robust-1.click" is_argument="true" />
		</snippetClassifier>
		
		<documentClassifier class="InformedTrecTextClassifier">
			<attribute name="stopword_file" type="string" value="data/stopwords.txt" is_argument="true" /><attribute name="qrel_file" type="string" value="data/prerolled/aq-robust-1.mark" is_argument="true" />
		</documentClassifier>
	</textClassifiers>

	<decisionMaker class="IftBasedDecisionMaker">
        <attribute name="rank_threshold" type="integer" value="1" is_argument="true" />
        <attribute name="gain_threshold" type="float" value="0.015" is_argument="true" />
        <attribute name="discount" type="float" value="0.5" is_argument="true" />
        <attribute name="query_time" type="float" value="15.1" is_argument="true" />
        <attribute name="doc_time" type="float" value="22.0" is_argument="true" />

	</decisionMaker>

	<logger class="FixedCostLogger">
		<attribute name="time_limit" type="integer" value="1200" is_argument="true" />
		<attribute name="query_cost" type="integer" value="10" is_argument="true" />
		<attribute name="document_cost" type="integer" value="20" is_argument="true" />
		<attribute name="snippet_cost" type="integer" value="3" is_argument="true" />
		<attribute name="serp_results_cost" type="integer" value="5" is_argument="true" />
		<attribute name="mark_document_cost" type="integer" value="3" is_argument="true" />
	</logger>

	<!--searchContext class="SearchContext">
	</searchContext-->
    	<searchContext class="SearchContextRevisedRelevance">
	</searchContext>

</userConfiguration>